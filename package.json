{
  "name": "boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "reset": "rm -rf node_modules .next/ && npm i && npm run postinstall && npm run dev",
    "prettier": "prettier --write .",
    "reset:prod": "dotenv -e .env.production -- npx prisma migrate reset",
    "migrate:prod": "dotenv -e .env.production -- npx prisma migrate deploy",
    "prepack": "husky install",
    "postinstall": "prisma generate",
    "prepare": "husky",
    "emails": "email dev --dir ./src/components/emails --port 3001",
    "stripe:watch": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
    "cloc": "cloc . --exclude-dir node_modules,.husky,.next,prisma,.eslintrc,.gitignore,.prettierignore,.prettier,commitlint.config.js,docker-compose.yml,next-env.d.ts,package-lock.json,package.json"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.4.1",
    "@hookform/resolvers": "^3.9.0",
    "@mantine/core": "^7.11.2",
    "@mantine/form": "^7.11.2",
    "@mantine/hooks": "^7.11.2",
    "@mantine/modals": "^7.11.2",
    "@mantine/notifications": "^7.11.2",
    "@mantine/nprogress": "^7.11.2",
    "@react-email/components": "0.0.19",
    "@react-email/render": "^0.0.15",
    "@tabler/icons-react": "^3.11.0",
    "bcrypt": "^5.1.1",
    "dotenv-cli": "^7.4.2",
    "micro": "^10.0.1",
    "micromatch": "^4.0.7",
    "next": "^14.2.4",
    "next-auth": "^4.24.7",
    "nodemailer": "^6.9.14",
    "react": "^18",
    "react-dom": "^18",
    "react-email": "2.1.4",
    "react-hook-form": "^7.52.1",
    "react-query": "^3.39.3",
    "stripe": "^15.11.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@prisma/client": "^5.16.1",
    "@types/bcrypt": "^5.0.2",
    "@types/micromatch": "^4.0.7",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "husky": "^9.0.11",
    "postcss": "^8",
    "prettier": "^3.3.1",
    "prisma": "^5.16.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
