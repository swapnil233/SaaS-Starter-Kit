{
  "name": "boilerplate",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "reset": "rimraf node_modules .next/ server/dist/ && npm ci",
    "prettier": "prettier --write .",
    "reset:prod": "dotenv -e .env.production -- npx prisma migrate reset",
    "migrate:prod": "export $(grep -v '^#' .env.production | xargs) && npx prisma migrate deploy",
    "prepare": "husky",
    "prepack": "husky",
    "postinstall": "prisma generate",
    "emails": "email dev --dir ./src/components/emails --port 3001",
    "stripe:watch": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
    "cloc": "cloc . --exclude-dir node_modules,.husky,.next,prisma,.eslintrc,.gitignore,.prettierignore,.prettier,commitlint.config.js,docker-compose.yml,next-env.d.ts,package-lock.json,package.json",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "combine": "node combine.js",
    "stripe:w": "stripe listen --forward-to http://localhost:3000/api/webhooks/stripe"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.9.1",
    "@hookform/resolvers": "^3.9.0",
    "@mantine/core": "^7.12.0",
    "@mantine/form": "^7.12.0",
    "@mantine/hooks": "^7.12.0",
    "@mantine/modals": "^7.12.0",
    "@mantine/notifications": "^7.12.0",
    "@mantine/nprogress": "^7.12.0",
    "@react-email/components": "0.0.19",
    "@react-email/render": "^0.0.15",
    "@tabler/icons-react": "^3.12.0",
    "@tanstack/react-query": "^5.75.7",
    "@upstash/ratelimit": "^2.0.5",
    "@vercel/analytics": "^1.5.0",
    "@vercel/edge": "^1.2.2",
    "@vercel/functions": "^2.2.2",
    "@vercel/speed-insights": "^1.2.0",
    "bcrypt": "^6.0.0",
    "chart.js": "^4.4.7",
    "cli-progress": "^3.12.0",
    "dotenv-cli": "^7.4.2",
    "jsonwebtoken": "^9.0.2",
    "micro": "^10.0.1",
    "micromatch": "^4.0.7",
    "next": "^15.3.2",
    "next-auth": "^4.24.11",
    "react": "^18",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18",
    "react-email": "2.1.4",
    "react-force-graph-2d": "^1.26.1",
    "react-google-recaptcha": "^3.1.0",
    "react-hook-form": "^7.52.1",
    "resend": "^4.5.1",
    "stripe": "^18.1.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@prisma/client": "^6.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/micromatch": "^4.0.7",
    "@types/node": "^20.8.6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-google-recaptcha": "^2.1.9",
    "@types/uuid": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "husky": "^9.1.7",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.5.1",
    "postcss": "^8",
    "prettier": "^3.3.1",
    "prisma": "^6.7.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
